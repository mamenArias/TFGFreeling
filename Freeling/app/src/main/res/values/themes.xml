<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Freeling" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/naranja</item>
        <item name="colorPrimaryVariant">@color/purpura</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul</item>
        <item name="colorSecondaryVariant">@color/azulOscuro</item>
        <item name="colorOnSecondary">@color/fucsia</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonGradient" parent = "Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/background_gradient_purple</item>
        <item name="fontFamily">@font/avertaextrabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonBlue" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/background_gradient_blue</item>
        <item name="fontFamily">@font/avertaextrabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="BottomNavigationBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/avertaextrabold</item>
    </style>

    <style name="ButtonOrange" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/background_gradient_orange</item>
        <item name="fontFamily">@font/avertaextrabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>